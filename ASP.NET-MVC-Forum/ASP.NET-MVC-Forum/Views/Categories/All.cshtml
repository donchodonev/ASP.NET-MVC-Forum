@model List<ASP.NET_MVC_Forum.Models.Category.AllCategoryViewModel>;

@{
    ViewData["Title"] = "All categories";
}

    <div class="row justify-content-center">

        @foreach (var category in Model)
        {
            <div class="card col-auto justify-content-center m-1" style="width: 10rem;">
                <a asp-controller="Categories" asp-action="CategoryContent" asp-route-categoryId="@category.Id" asp-route-categoryName="@category.Name">
                    <img class="card-img-top w-100 h-100" src="@category.ImageUrl" alt="Card image cap">
                </a>
                <h6 class="card-footer text-center">@category.Name</h6>
            </div>
        }

    </div>
