@{
    ViewData["Title"] = "Home Page";
}

<div class="row justify-content-center">

    @foreach (var category in ViewBag.Categories)
    {
        <div class="card col-auto justify-content-center m-1" style="width: 10rem;">
            <a href="#">
                <img class="card-img-top w-100 h-100" src="@category.ImageUrl" alt="Card image cap">
            </a>
            <h5 class="card-footer text-center">@category.Name</h5>
        </div>
    }

</div>
