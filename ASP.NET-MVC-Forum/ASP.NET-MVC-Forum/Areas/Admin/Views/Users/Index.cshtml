@model List<ASP.NET_MVC_Forum.Areas.Admin.Models.User.UserViewModel>;

<link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Roboto|Varela+Round">
<link rel="stylesheet" href="https://fonts.googleapis.com/icon?family=Material+Icons">
<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">
<link rel="stylesheet" href="~/css/admin-users-table.css">


<script>
    $(document).ready(function () {
        $('[data-toggle="tooltip"]').tooltip();
    });
</script>
<div>
    <div class="table-responsive p-0 m-0 bg-dark">
        <div class="table-wrapper p-0">
            <table class="table table-dark table-hover bg-dark">
                <thead>
                    <tr>
                        <th>Id</th>
                        <th>Name</th>
                        <th>Created</th>
                        <th>Roles</th>
                        <th>Status</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var user in Model)
                    {
                        <tr>
                            <td>@user.Id</td>
                            <td>@user.Username</td>
                            <td>@user.CreatedOn.ToShortDateString()</td>
                            @{ if (user.Roles.Count == 0)
                                {
                                    <td>User</td>
                                }
                                else
                                {
                                    foreach (var role in user.Roles)
                                    {
                                        <td>@role<br /></td>
                                    }
                                }
                                @if (user.IsBanned)
                                {
                                    <td><span class="status text-danger">&bull;</span>Ban</td>
                                }
                                else
                                {
                                    <td><span class="status text-success">&bull;</span>Active</td>
                                }
                            }
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
