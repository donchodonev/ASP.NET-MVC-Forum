@model List<ASP.NET_MVC_Forum.Areas.Admin.Models.Report.ReportViewModel>;
@if (TempData.ContainsKey("Message"))
{
    <div class="alert alert-success text-center" role="alert">
        @TempData["Message"]
    </div>
}

<div class="row border-bottom-0 mr-0 mt-1 border-left justify-content-center">
    @foreach (var report in @Model)
    {
        <div class="col-sm-6 col-md-4 col-lg-3 mb-4">
            <div class="card text-center border-right border-left border-dark">
                <div class="card-header bg-dark">
                    <a asp-area="" asp-controller="Posts" asp-action="ViewPost" asp-route-postId="@report.PostId" asp-route-postTitle="@report.PostTitle" class="text-light text-decoration-none">
                        @report.PostShortTitle
                    </a>
                </div>
                <div class="card-body d-flex flex-column" style="min-height:180px">
                    <p class="card-text">@report.ShortReason...</p>

                    <!-- Button trigger modal -->

                    <button type="button" class="btn btn-primary mt-auto" data-toggle="modal" data-target="#reportId@(report.Id)">
                        View Report
                    </button>

                    <!-- Modal -->
                    <div class="modal fade" id="reportId@(report.Id)" tabindex="-1" role="dialog" aria-labelledby="exampleModalLongTitle" aria-hidden="true">
                        <div class="modal-dialog" role="document">
                            <div class="modal-content">
                                <div class="modal-header">
                                    <h5 class="modal-title" id="exampleModalLongTitle">
                                        <a asp-area="" asp-controller="Posts" asp-action="ViewPost" asp-route-postId="@report.PostId" asp-route-postTitle="@report.PostTitle" class="text-dark text-decoration-none">
                                            @report.PostTitle</a>
                                    </h5>
                                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                        <span aria-hidden="true">&times;</span>
                                    </button>
                                </div>
                                <div class="modal-body">
                                    @report.Reason
                                </div>
                                <div class="modal-footer justify-content-center">
                                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Exit</button>

                                    @if (!report.IsDeleted)
                                    {
                                        <form method="post">
                                            <button type="submit" asp-area="" asp-controller="Posts" asp-action="Delete" asp-route-postId="@report.PostId" asp-route-postTitle="@report.PostTitle" class="btn btn-danger">Delete post and resolve</button>
                                        </form>
                                        <a asp-area="Admin" asp-controller="Reports" asp-action="Delete" asp-route-reportId="@report.Id" class="btn btn-success">Mark Resolved</a>
                                    }
                                    else
                                    {
                                        <a asp-area="Admin" asp-controller="Reports" asp-action="Restore" asp-route-reportId="@report.Id" class="btn btn-primary">Restore report</a>
                                    }

                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="card-footer text-muted bg-dark">
                    <span class="text-light">@report.CreatedOnAsString</span>
                </div>
            </div>
        </div>
    }
</div>
